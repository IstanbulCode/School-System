{{#if announcements}}
<section>
    <div class="container">
        <h5 class="mt-4 pb-4 text-center" style="color: #222424;"><b>Announcements</b></h5>
        <a href="/tutor/my-announcements" class="btn btn mb-3"
            style="background-color: #222424; color: #fff;">My Announcements</a>
        {{!-- <a href="" style="text-decoration: none;"> --}}
            {{#each announcements}}
            <div class="card">
                <h6>{{this.title}}</h6>
                <div class="row">
                    <small class="w-50" style="padding-left: 15px; padding-top: 0;;">{{this.date}}</small>
                </div>
                <hr class="p-0">
                <p>{{this.content}}</p>
            </div>
            {{!--
        </a> --}}
        {{/each}}
    </div>
</section>
{{else}}
<section>
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <p class="mt-5">You don't have any messages</p>
                    <a href="/tutor/add-announcement" class="btn btn btn-sm"
                        style="background-color:#222424; color: #fff;">Create New Announcement</a>
                </div>
            </div>
        </div>
    </div>
</section>

{{/if}}

<style>
.container .card{
    background:#D3D3D3;
    color: #000;
    padding: 15px 0px 0px 15px;
    font-size: 14px;
    margin-bottom: 10px;

}
</style>