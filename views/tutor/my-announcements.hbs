{{#if announcements}}
<section>
    <div class="container">
        <h5 class="mt-4 pb-4 text-center" style="color: #222424;"><b>Announcements</b></h5>
        <a href="/tutor/add-announcement" class="btn btn mb-3" style="background-color: #222424; color: #fff;">Create
            New Announcement</a>
            {{#each announcements}}
            <div class="card">
                <h6>{{this.title}}</h6>
                 <i class="far fa-trash-alt text-muted delete" data-toggle="modal" data-target="#delete-notification"></i>
                <div class="row">
                    <small class="w-50" style="padding-left: 15px; padding-top: 0;">{{this.date}}</small>
                </div>
                  <div class="row">
                    <small style="padding-left: 15px; padding-top: 0;">Visible to :</small> 
                    <small class="w-50" style="padding-top: 0; padding-left: 5px;">{{#each this.visibility}}{{this.name}}, {{/each}}</small>
                    
                </div>
                <hr class="p-0">
                <p>{{this.content}}</p>
            </div>
            <div class="modal fade" id="delete-notification" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="mb-3">Do you want to delete this notification?</div>
                    <a href="/tutor/delete-announcement?id={{this._id}}" class="btn btn-danger float-right ">Delete</a>
            </div>
        </div>
    </div>
</div>
        {{/each}}
    </div>
</section>
{{else}}
<section>
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <p class="mt-5">You haven't created any announcement to Student</p>
                    <a href="/tutor/add-announcement" class="btn btn btn-sm" style="background-color:#222424; color: #fff;">Create New Announcement</a>
                </div>
            </div>
        </div>
    </div>
</section>

{{/if}}

