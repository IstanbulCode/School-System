  // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.

  var modal = $(this)
})

</script>

<style>
    .container .card {
        background: #D3D3D3;
        color: #000;
        padding: 15px 0px 0px 15px;
        font-size: 14px;
        margin-bottom: 10px;

    }

    .delete{
        position : absolute;
        top : 1rem;
        right: 1rem;
        cursor: pointer;
    }

    .modal-backdrop {
        position: fixed;
        top: 0;
        right: 0;
