<section>
   <div class="container">
      <div class="row justify-content-center">
         <div class="col-md-6">
            {{#if visiblity}}
            <div class="alert alert-success" role="alert">
               <span class="font-weight-bold">Success!</span> new announcement added to {{visiblity}}.
            </div>
            {{/if}}
            <h2 class="text-center">Add Announcement</h2>
            <form action="/institution/add-announcement" method="POST" id="" ">
            <div class=" form-group mt-1">
               <label>Title</label>
               <input type="text" name="institutionId" id="" value="{{institutionDetails._id}}" hidden>
               <input type="text" class="form-control" name="title" placeholder="Enter Title" required>
         </div>
         <input type="text" name="date" id="" value="" hidden>

         <!-- Here we can enable subject if we want
            <div class="form-group">
               <label>Subject</label>
               <textarea rows="2" placeholder="Enter Subject" type="text" class="form-control" id="subject" name="subject" required>{{user.address}}</textarea>
            </div>
            -->
         <div class="form-group">
            <label>Content</label>
            <textarea rows="3" type="text" placeholder="Enter Content" class="form-control" id="content" name="content"
               required>{{user.address}}</textarea>
         </div>
         <label for="visible">Visible to</label>

         <select class="custom-select" name="visiblity" required>
            <option selected value="">Choose...</option>
            <option value="Everyone">Everyone</option>
            <option value="Student">Student</option>
            <option value="Teachers">Teachers</option>
         </select>
         <button type="submit" style="background-color: #071414; color: #fff;"
            class="btn btn float-right mt-2">Submit</button>
         </form>
      </div>
   </div>
   </div>
</section>
