{{#if tutorsIn_institution}}
<section>

	<div class="container-fluid">
		<Center>
			<h3><b>Teacher List</b></h3>
		</Center>
		<div class="row">
			<a href="/institution/all-tutors-different-status/?status=Blocked" class="btn btn ml-auto mr-0 mb-3"
				style="background-color: #212529; color: #fff;">All blocked Teacher </a>
			<table class="table" style="background-color:#D3D3D3;">
				<thead>
					<tr style="background-color: #2F4F4F; color: #fff;">
						<th scope="col">No.</th>
						<th scope="col">Name</th>
						<th class="email-large-student" scope="col">Email</th>
						<th class="email-large-student" scope="col">Mobile</th>
						<th class="email-large-student" scope="col">Gender</th>
						<th class="email-large-student" scope="col">Subjects</th>
						<!-- <th scope="col">Quantity</th>-->
						<th scope="col">Block</th>
						<th scope="col">Details</th>
						<th scope="col"></th>

					</tr>
				</thead>
				<tbody>
					{{#each tutorsIn_institution}}
					<tr>
						<td style="width: 20%;">{{this.slno}}</td>

						<td style="width: 20%;">{{this.fname}} {{this.lname}}</td>
						<td class="email-large-student" style="width: 20%;">{{this.email}}</td>
						<td class="email-large-student" style="width: 20%;">{{this.mobile}}</td>
						<td class="email-large-student" style="width: 20%;">{{this.gender}}</td>
						<!--  <td style="width: 20%;">
                        <button class="cart-item-count "  onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user}}',-1)">-</button>
                         <span id="{{this.product._id}}">{{this.quantity}}</span>
                          <button class="cart-item-count" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user}}',1)">+</button>
                    </td>-->
						<td class="email-large-student" style="width: 5%;">
							<div class="dropdown">
								<button class="btn btn dropdown-toggle" style="background-color: #696969; color: #fff;"
									type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
									aria-expanded="false"> <span class="large-screen">Created </span>Subjects</button>
								<div class="dropdown-menu" style="background-color: #696969; "
									aria-labelledby="dropdownMenuButton">
									<a class="dropdown-item" style="color: #fff;">{{this.subjects.name}}</a>

								</div>
							</div>
						</td>
						<td class="email-large-student" style="width: 5%;">
							<a href="/institution/change-tutor-status/Blocked/{{this._id}}/all-tutors"
								onclick="return confirm('Are you sure want to block {{this.fname}}?')"
								class="btn btn mt-1" style="background-color: #696969; color: #fff;">Block</a>
						</td>
						<td class="hide-medium" style="width: 5%;">
							<a href="/institution/change-tutor-status/Blocked/{{this._id}}/all-tutors"
								onclick="return confirm('Are you sure want to block {{this.fname}}?')"
								class="btn btn mt-1" style="background-color: #696969; color: #fff;"><i
									class="fas fa-ban"></i></a>
						</td>
						<td style="width: 5%;">
							<a onclick="tutorInfo('{{this._id}}')" data-toggle="modal" data-target="#studentprofile"
								class="btn btn mt-1" style="background-color: #696969; color: #fff;"><i
									class="fas fa-info-circle"></i></a>
						</td>

					</tr>
					{{/each}}
				</tbody>
				<hr>
			</table>
			<hr>

		</div>
	</div>

</section>
{{else}}
<section>
	<div class="container-fluid">
		<div class="container">
			<div class="row">
				<div class="col-md-12 text-center">
					<p class="mt-5">There is not any Teacher joined under your School</p>
					<a data-toggle="modal" data-target="#shareLink" class="btn btn btn-sm"
						style="background-color:#222424; color: #fff;">Share link to teachers</a>
				</div>
			</div>
		</div>
	</div>
</section>

{{/if}}

<style>
	@media screen and (max-width: 600px) {

		/*Hide in small Devices*/
		.email-large-student {
			display: none;
		}
	}

	@media screen and (min-width: 600px) {
		.hide-medium {
			display: none;
		}
	}
</style>







<!-- Modal for details of student-->
<section>
	<div class="modal fade" id="studentprofile" tabindex="-1" role="dialog" aria-labelledby="InstitutionAnnouncement"
		aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered" role="document">
			<div class="modal-content">
				<div class="close-modal-header">
					<span></span>
					<div class="close-btn" data-dismiss="modal"><i class="fal fa-times"></i></div>
				</div>
				<div class="modal-body">

					<div class="row z-depth-3">
						<div class="col-sm-4 rounded-left" style="background-color: #000;">
							<div class="card-block text-center text-white">
								<i class="fas fa-user-tie fa-7x mt-5"></i>
								<h2 class="small-device-name font-weight-bold mt-4" id="student-fullName">{{this.fname}}
								</h2>
								<h2 class="large-device-name font-weight-bold mt-4" id="student-fname">{{fname}}</h2>
								<p class="small-device-name">Student</p>
								<div class="subjects">
									<hr class="bg-primary">
									
								</div>


							</div>
						</div>
						<div class="col-sm-8 bg-white rounded-right">
							<h3 class="large-device-name mt-3 text-center" id="student-fullName2">{{fullName}}</h3>
							<h3 class="small-device-name mt-3 text-center">Informations</h3>
							<hr class="bg-primary mt-0 w-25" style="margin-left: 37%;">

							<div class="row">

								<div class="small-email col-sm-6">
									<p class="font-weight-bold">Email:</p>
									<h6 class="text-muted" id="student-email">{{email}}</h6>
								</div>

								<div class="col-sm-6">
									<p class="font-weight-bold">Mobile:</p>
									<h6 class="text-muted" id="student-mobile">{{mobile}}</h6>
								</div>
								<div class="col-sm-6">
									<p class="font-weight-bold">Gender:</p>
									<h6 class=" text-muted" id="student-gender">{{gender}}</h6>
								</div>

								<div class="col-sm-6">
									<p class="font-weight-bold">Joined Date</p>
									<h6 id="student-joinedDate" class="text-muted">{{joinedDate}}</h6>
								</div>

								<div class="large-device-name col-sm-6">
									<p class="font-weight-bold">Type:</p>
									<h6 class="text-muted">Student</h6>
								</div>

								<div class="large-email col-sm-6">
									<p class="font-weight-bold">Email:</p>
									<h6 class="text-muted" id="student-email2">email</h6>
								</div>
							</div>
							<hr class="bg-primary">

							<h5 class="mt-3 font-weight-bold"> Recent remarks:</h5>
							<h6 id="noRemark" style="color: #6c757d;" class="mt-3"></h6>
							<div class="row">
								<div class="col-sm-6">
									<p id="remarkedPerson1" class="font-weight-bold">{{remarkedPerson1}}</p>
									<h6 id="remark1" class="text-muted">{{remark1}}</h6>
								</div>

								<div class="col-sm-6">

									<p id="remarkedPerson2" class="font-weight-bold">{{remarkedPerson2}}</p>
									<h6 id="remark2" class="text-muted">{{remark2}}</h6>
								</div>
								<div class="remarks" style="padding-left: 10px;">
									<a id="view-remark" class="btn btn "
										style="color:white; background-color: #222424; ">All Remarks</a>
								</div>
								<a id="add-remark" class="btn btn " style="color:white; background-color: #222424;">Add
									Remark</a>

							</div>

							<hr class="bg-primary">
							</ul>

						</div>
						<a data-dismiss="modal" style="background-color: #2F4F4F;"
							class="student-info-close btn btn ml-auto"><small style="color: #fff;">close</small></a>
					</div>

				</div>
			</div>
		</div>
	</div>
</section>
<!--Model Ends-->

<style>
	@media screen and (max-width: 600px) {

		/*Hide in small Devices*/
		.subjects {
			display: none;
		}

		.large-device-name {
			display: none;
		}

		.large-email {
			display: none;
		}
	}

	@media screen and (min-width: 600px) {

		/*Hide in medium Devices*/
		.small-device-name {
			display: none;
		}

		.smallDevice-subjects {
			display: none;
		}

		.close-modal-header {
			display: none;
		}

		.student-info-close {
			display: none;
		}

		.small-email {
			display: none;
		}

		.table {
			margin-left: 60px;
		}

	}
</style>

<style>
	.main-container {
		margin-left: 0;
	}

	.dropdown-item:hover {
		background-color: #696969;
	}
</style>