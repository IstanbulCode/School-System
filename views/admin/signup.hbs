<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center">Admin Signup</h2>
                <form action="/admin/signup" method="post">
                    <label for="name">Name</label>
                    <input type="text" name="name" placeholder="Name" class="form-control">
                    <label for="email">Email</label>
                    <input type="email" name="email" placeholder="Email" class="form-control">
                    <input type="text" name="date" id="" value="" hidden>
                    <label>Admin Code</label>
                    <input type="password" class="form-control" name="code" placeholder="Code">
                    <label for="password">Password</label>
                    <input type="password" name="password" placeholder="Password" class="form-control"><br>
                    {{#if signUpErr}}
                    <p class="text-danger">{{signUpErr}}</p>
                    {{/if}}
                    <a href="/admin/login" class="float-right">Already have account?</a><br>
                    <button type="submit" class="btn" style="background-color: #222424; color: #fff;">SUBMIT</button>
                </form>
            </div>
        </div>
    </div>
</section>
<style>
    .main-container {
        margin-left: 0;
    }
</style>


<script>
    function loginErr() {
        document.getElementById('loginErr').style.display = 'none'
    }
</script>