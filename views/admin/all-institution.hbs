{{#if institutions}}
<section>
	<div class="container-fluid">
		<Center>
			<h3><b>School List</b></h3>
		</Center>
		<div class="row">
			<table class="table" style="background-color:#D3D3D3;">
				<thead>
					<tr style="background-color: #2F4F4F; color: #fff;">
						<th scope="col">No.</th>
						<th scope="col">Name</th>
						<th class="hide-small" scope="col">Email</th>
						<th class="" scope="col">Mobile</th>
						<th class="hide-small" scope="col">Type</th>
						<th class="hide-small" scope="col">Head</th>
						<th class="hide-small" scope="col">Board</th>
						<th scope="hide-small">Details</th>
						<th scope="col"></th>

					</tr>
				</thead>
				<tbody>
					{{#each institutions}}
					<tr>
						<td style="width: 20%;">{{this.slno}}</td>

						<td style="width: 20%;">{{this.fname}} {{this.name}}</td>
						<td class="hide-small" style="width: 20%;">{{this.email}}</td>
						<td class="" style="width: 20%;">{{this.mobile}}</td>
						<td class="hide-small" style="width: 20%;">{{this.type}}</td>
						<td class="hide-small" style="width: 20%;">{{this.head}}</td>
						<td class="hide-small" style="width: 20%;">{{this.board}}</td>
						<td style="width: 5%;">
							<a href="/admin/institution-details/?id={{this._id}}" class="btn btn mt-1"
								style="background-color: #696969; color: #fff;"><i class="fas fa-info-circle"></i></a>
						</td>
					</tr>
					{{/each}}
				</tbody>
				<hr>
			</table>
			<hr>
		</div>
	</div>
</section>
{{else}}
<section>
	<div class="container-fluid">
		<div class="container">
			<div class="row">
				<div class="col-md-12 text-center">
					<p class="mt-5">There is not any students joined under your School</p>
					<a data-toggle="modal" data-target="#shareProduct" class="btn btn btn-sm"
						style="background-color:#222424; color: #fff;">Share link to students</a>
				</div>
			</div>
		</div>
	</div>
</section>
{{/if}}
<style>
	@media screen and (max-width: 600px) {

		/*Hide in small Devices*/
		.hide-small {
			display: none;
		}
	}

	@media screen and (min-width: 600px) {

		/*Hide in medium Devices*/
		.hide-medium {
			display: none;
		}
	}
</style>







<!-- Modal for details of student-->
<section>
	<div class="modal fade" id="studentprofile" tabindex="-1" role="dialog" aria-labelledby="InstitutionAnnouncement"
		aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered" role="document">
			<div class="modal-content">
				<div class="close-modal-header">
					<span></span>
					<div class="close-btn" data-dismiss="modal"><i class="fal fa-times"></i></div>
				</div>
				<div class="modal-body">

					<div class="row z-depth-3">
						<div class="col-sm-4 rounded-left" style="background-color: #000;">
							<div class="card-block text-center text-white">
								<i class="fas fa-user-tie fa-7x mt-5"></i>
								<h2 class="small-device-name font-weight-bold mt-4" id="student-fullName">{{this.fname}}
								</h2>
								<h2 class="large-device-name font-weight-bold mt-4" id="student-fname">{{fname}}</h2>
								<p class="small-device-name">Student</p>
								<div class="subjects">
									<hr class="bg-primary">
									<h5>Subjects</h5>
									<div class="row">
										<div class="col-sm-6">
											<ul>
												<li>*Java</li>
												<li>*Phython</li>
												<li>*DBMSS</li>
											</ul>
										</div>

									</div>
								</div>


							</div>
						</div>
						<div class="col-sm-8 bg-white rounded-right">
							<h3 class="large-device-name mt-3 text-center" id="student-fullName2">{{fullName}}</h3>
							<h3 class="small-device-name mt-3 text-center">Informations</h3>
							<hr class="bg-primary mt-0 w-25" style="margin-left: 37%;">

							<div class="row">

								<div class="small-email col-sm-6">
									<p class="font-weight-bold">Email:</p>
									<h6 class="text-muted" id="student-email">{{email}}</h6>
								</div>

								<div class="col-sm-6">
									<p class="font-weight-bold">Mobile:</p>
									<h6 class="text-muted" id="student-mobile">{{mobile}}</h6>
								</div>
								<div class="col-sm-6">
									<p class="font-weight-bold">Gender:</p>
									<h6 class=" text-muted" id="student-gender">{{gender}}</h6>
								</div>
								<div class="col-sm-6">
									<p class="font-weight-bold">Guardian:</p>
									<h6 class=" text-muted" id="student-guardian">{{guardian}}</h6>
								</div>
								<div class="col-sm-6">
									<p class="font-weight-bold">Joined Date</p>
									<h6 id="student-joinedDate" class="text-muted">{{joinedDate}}</h6>
								</div>
								<div class="col-sm-6">
									<p class="font-weight-bold">Address:</p>
									<h6 class=" text-muted" id="student-address">{{address}}</h6>
								</div>
								<div class="large-device-name col-sm-6">
									<p class="font-weight-bold">Type:</p>
									<h6 class="text-muted">Student</h6>
								</div>

								<div class="large-email col-sm-6">
									<p class="font-weight-bold">Email:</p>
									<h6 class="text-muted" id="student-email2">email</h6>
								</div>
							</div>
							<hr class="bg-primary">
							<div class="smallDevice-subjects">
								<h5 class="mt-3 font-weight-bold">Subjects Enrolled:</h5>

								<div class="row">
									<div class="col-sm-6">
										<h6 class="text-muted">*Java</h6>
										<h6 class="text-muted">*Phython</h6>
										<h6 class="text-muted">*Data Structures</h6>

									</div>
								</div>
							</div>

							<h5 class="mt-3 font-weight-bold"> Recent remarks:</h5>
							<h6 id="noRemark" style="color: #6c757d;" class="mt-3"></h6>
							<div class="row">
								<div class="col-sm-6">
									<p id="remarkedPerson1" class="font-weight-bold">{{remarkedPerson1}}</p>
									<h6 id="remark1" class="text-muted">{{remark1}}</h6>
								</div>

								<div class="col-sm-6">

									<p id="remarkedPerson2" class="font-weight-bold">{{remarkedPerson2}}</p>
									<h6 id="remark2" class="text-muted">{{remark2}}</h6>
								</div>
								<div class="remarks" style="padding-left: 10px;">
									<a id="view-remark" class="btn btn "
										style="color:white; background-color: #222424; ">All Remarks</a>
								</div>
								<a id="add-remark" class="btn btn" style="color:white; background-color: #222424;">Add
									Remark</a>

							</div>

							<hr class="bg-primary">



							<!--
					   <li>  <a href="/student" class="btn btn " style="color:white; background-color: #222424;">Add Remark</a></li>
					   <li><a href="#!"><i class="fab fa-youtube px-3 h4 text-info"></i></a></li>
					   <li><a href="#!"><i class="fab fa-twitter px-3 h4 text-info"></i></a></li>
					   -->
							</ul>

						</div>
						<a data-dismiss="modal" style="background-color: #2F4F4F;"
							class="student-info-close btn btn ml-auto"><small style="color: #fff;">close</small></a>
					</div>

				</div>


				<!--model footer start
		  <div class="modal-footer">
			<a href="/institution/add-announcement" style="background-color: #2F4F4F;" class="new-announcement btn btn"><small style="color: #fff;">New Announcement</small></a>
			</div>
			<!--model footer ends-->
			</div>
		</div>
	</div>
</section>
<!--Model Ends-->

<style>
	@media screen and (max-width: 600px) {

		/*Hide in small Devices*/
		.subjects {
			display: none;
		}

		.large-device-name {
			display: none;
		}

		.large-email {
			display: none;
		}
	}

	@media screen and (min-width: 600px) {

		/*Hide in medium Devices*/
		.small-device-name {
			display: none;
		}

		.smallDevice-subjects {
			display: none;
		}

		.close-modal-header {
			display: none;
		}

		.student-info-close {
			display: none;
		}

		.small-email {
			display: none;
		}

		.table {
			margin-left: 60px;
		}
	}
</style>

<style>
	.main-container {
		margin-left: 0;
	}
</style>